<!DOCTYPE html>
<html>
<head>
  <title>James Robert Rooke | Web Designer &amp; Web Developer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <!--Open Sans-->
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
  <%= yield :header %>
</head>
<body>
  <!--Navigation-->
  <div id="navbar" class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container small-margin-top">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#"><i class="avatar-pic"></i><p class="push-this">James Robert Rooke <span class="speciality">Web Designer</span></p>
        </a>
      </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="active"><a href="#top">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#portfolio">Portfolio</a></li>
            <li><a href="#contact">Contact</a></li>
            <li class="sprites"><a href="./" title="Facebook"><i class="facebook"></i>Facebook</a></li>
            <li class="sprites"><a href="./" title="Twitter"><i class="twitter"></i>Twitter</a></li>
            <li class="sprites"><a href="./" title="LinkedIn"><i class="linkedin"></i>LinkedIn</a></li>
          </ul>
        </div><!--/.nav-collapse -->
    </div>
  </div>
<%= yield %>
<%= yield :footer %>
<script type="text/javascript">
  $('body').scrollspy();
 skrollr.init({
    forceHeight: false, 
    smoothScrolling: true,
    easing: {
      WTF: Math.random,
      inverted: function(p) {
        return 1-p;
      }
    }
  });
  $("#navbar ul li a[href^='#'], #scroll-down").on('click', function(e) {

     // prevent default anchor click behavior
     e.preventDefault();

     // store hash
     var hash = this.hash;

     // animate
     $('html, body').animate({
         scrollTop: $(this.hash).offset().top
       }, 700, function(){

         // when done, add hash to url
         // (default click behaviour)
         window.location.hash = hash;
       });

  });
</script>
</body>
</html>